#!/bin/sh
#
# `lynx`: Wrapper for lynx
#
# Depends: `lynx`
# Environment: none

USER_AGENT='Mozilla/5.0 (Windows NT 6.1; WOW64; rv:77.0) Gecko/20190101 Firefox/77.0'

main ()
{
	# The following lynx.cfg options apparently have no effect, so use
	# command line switches to override:
	#	DISPLAY_CHARSET
	#	VERBOSE_IMAGES
	#	MAKE_LINKS_FOR_IMAGES
	/usr/bin/lynx \
		-cfg=~/.lynx/lynx.cfg \
		-lss=~/.lynx/lynx.lss \
		-display_charset=utf-8 \
		-verbose=true \
		-image_links=true \
		-useragent="$USER_AGENT" \
		-nomore \
		"$@" 2>/dev/null
}

main "$@"

